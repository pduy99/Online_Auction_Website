<div class="row px-5">
    <div class="col-md-12">
        <!-- DATA TABLE -->
        <h3 class="title-5 m-b-35 my-5">{{title}}</h3>
        <div class="table-responsive table-responsive-data2">
            <table class="table table-data2">
                <thead>
                    <tr>
                        <th>Mã người dùng</th>
                        <th>Tên người dùng</th>
                        <th>Tên tài khoản</th>
                        <th>Email</th>
                        <th>Địa chỉ</th>
                        <th>Đánh giá</th>
                        <th>Trạng thái</th>

                        <th>
                            <div class="table-data-feature">
                                <a class="item" data-toggle="tooltip" data-placement="top" title="Thêm" href="/admin/user/add">
                                    <i class="fas fa-plus"></i>
                                </a>
                            </div>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="spacer"></tr>
                    {{#each Bidders}}
                    <tr class="tr-shadow">
                        <td>{{id}}</td>
                        <td>{{firstname}} {{lastname}}</td>
                        <td>{{username}}</td>
                        <td>{{email}}</td>
                        <td>{{address}}</td>
                        <td>{{like_count}} <i class="fas fa-thumbs-up"></i> / {{report_count}} <i
                                class="fas fa-thumbs-down"></i></td>
                        <td>{{status}}</td>
                        <td>
                            <div class="table-data-feature">
                                <a class="item" data-toggle="tooltip" data-placement="top" title="Cập nhật" href="/admin/user/update?id={{id}}">
                                    <i class="fas fa-pen-square"></i>
                                </a>
                                <a class="item" data-toggle="tooltip" data-placement="top" title="Xóa" href="/admin/user/delete?id={{id}}"
                                    onclick="return confirm('Bạn chắc chắn muốn xóa tài khoản: {{id}} - {{username}}?')">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </div>
                        </td>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        <!-- END DATA TABLE -->
    </div>
</div>